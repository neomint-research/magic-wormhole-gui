{
  "name": "wormhole-desktop",
  "version": "1.0.0",
  "main": "build/main/index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:docker": "docker build -t wormhole-cli ./docker",
    "dev": "npm run build:ts && electron .",
    "dist": "npm run build:ts && electron-builder"
  },
  "dependencies": {
    "archiver": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/archiver": "^6.0.0"
  },
  "build": {
    "appId": "com.wormhole.desktop",
    "productName": "Wormhole",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
